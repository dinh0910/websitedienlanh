@model IEnumerable<websitedienlanh.Models.Banner>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Hình ảnh
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Active)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="~/images/banners/@item.HinhAnh" width="150" height="100" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Active)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BannerID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BannerID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BannerID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
