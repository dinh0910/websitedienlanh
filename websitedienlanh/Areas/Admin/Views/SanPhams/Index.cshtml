@model IEnumerable<websitedienlanh.Models.SanPham>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DanhMuc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ThuongHieu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ten)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HinhAnh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DonGia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SoLuong)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DanhMuc.DanhMucID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ThuongHieu.ThuongHieuID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ten)
            </td>
            <td>
                <img class="img-thumbnail" width="150" height="100" src="~/images/products/@Html.DisplayFor(modelItem => item.HinhAnh)" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DonGia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuong)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SanPhamID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SanPhamID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SanPhamID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
