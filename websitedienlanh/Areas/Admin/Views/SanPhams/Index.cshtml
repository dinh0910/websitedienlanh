@model IEnumerable<websitedienlanh.Models.SanPham>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table" id="myTable">
    <thead>
        <tr>
            <th>
                Danh mục
            </th>
            <th>
                Thương hiệu
            </th>
            <th>
                Tên
            </th>
            <th>
                Hình ảnh
            </th>
            <th>
                Đơn giá
            </th>
            <th>
                Số lượng
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DanhMuc.TenDanhMuc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ThuongHieu.Ten)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ten)
            </td>
            <td>
                <img class="img-thumbnail" width="150" height="100" src="~/images/products/@Html.DisplayFor(modelItem => item.HinhAnh)" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DonGia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuong)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SanPhamID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SanPhamID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SanPhamID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
