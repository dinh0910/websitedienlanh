@model List<websitedienlanh.Models.CartItem>

@{
    int total = 0;
    int amount = 0;
}

<div class="bg-light py-5">
    <div class="container">

        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item link-danger"><a href="/">Trang chủ</a></li>
                <li class="breadcrumb-item link-danger"><a asp-contoller="Home" asp-action="ViewCart">Giỏ hàng</a></li>
                <li class="breadcrumb-item active" aria-current="page">Tiến hành đặt hàng</li>
            </ol>
        </nav>

        <div class="p-3">
            <form asp-action="CreateBill">
                <div class="row">
                    <div class="col-7">
                        <div class="border shadow-lg rounded bg-white">
                            <div class="p-4">
                                <h4 class="text-center text-danger">Nhập thông tin đặt hàng</h4>
                                <div class="mb-3">
                                    <label for="hoten" class="form-label">Họ tên</label>
                                    <input type="text" class="form-control" id="hoten" placeholder="Nhập họ và tên của bạn" name="HoTen" required>
                                </div>
                                <div class="mb-3">
                                    <label for="sdt" class="form-label">Số điện thoại</label>
                                    <input type="text" class="form-control" id="sdt" placeholder="Nhập số điện thoại của bạn" name="Sdt" required>
                                </div>
                                <div class="mb-3">
                                    <label for="exampleFormControlInput1" class="form-label">Địa chỉ</label>
                                    <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Nhập địa chỉ của bạn" name="DiaChi" required>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-4 offset-1">
                        <div class="border shadow-lg rounded bg-white">
                            <div class="p-4">
                                <h4 class="text-center text-danger">Chi tiết đơn hàng</h4>
                                <div class="d-flex">
                                    @foreach (var item in Model)
                                    {
                                        <div class="fw-bold">@item.SanPham.Ten</div>
                                        <div class="ms-5"><span>x</span>@item.SoLuong</div>
                                        amount = item.SanPham.DonGia * item.SoLuong;
                                        total += amount;
                                        <div class="ms-auto">@(amount.ToString("n0"))đ</div>
                                    }
                                </div>
                                <hr />
                                <div><b>Thành tiền: </b><span>@(total.ToString("n0"))đ</span></div>
                                <div class="d-grid p-3">
                                    <button type="submit" class="btn btn-outline-danger text-uppercase">Tiến hành đặt hàng</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>